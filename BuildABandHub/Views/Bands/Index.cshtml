                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticesPerWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GigsPlayed)
            </td>
