                @Html.DisplayFor(modelItem => item.GigsPerWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.InstrumentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BandId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BandId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BandId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
